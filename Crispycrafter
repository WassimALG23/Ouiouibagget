local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
	Name = "Fast Seed Buyer",
	LoadingTitle = "Launching...",
	LoadingSubtitle = "by Zoro",
	ConfigurationSaving = {
		Enabled = false
	}
})

local MainTab = Window:CreateTab("Buy Seeds", 4483362458)
MainTab:CreateSection("Select Seeds")

local seedOptions = {
	"Carrot",
	"Strawberry",
	"Blueberry",
	"Tomato",
	"Cauliflower",
	"Avocado",
	"Banana",
	"Green Apple",
	"Bell Pepper",
	"Kiwi",
	"Prickly Pear",
	"Loquat",
	"Feijoa",
	"Sugar Apple"
}

-- Track selected seeds
local selectedSeeds = {}
for _, seed in ipairs(seedOptions) do
	selectedSeeds[seed] = false
end

-- Create toggles for each seed
for _, seed in ipairs(seedOptions) do
	MainTab:CreateToggle({
		Name = seed,
		CurrentValue = false,
		Callback = function(state)
			selectedSeeds[seed] = state
		end
	})
end

-- Looping toggle
local autoBuy = false

MainTab:CreateSection("Auto Buy")

MainTab:CreateToggle({
	Name = "âš¡ Auto-Buy (Fast)",
	CurrentValue = false,
	Callback = function(value)
		autoBuy = value
		if autoBuy then
			task.spawn(function()
				while autoBuy do
					for seed, isSelected in pairs(selectedSeeds) do
						if isSelected then
							local args = { seed }
							game:GetService("ReplicatedStorage"):WaitForChild("GameEvents"):WaitForChild("BuySeedStock"):FireServer(unpack(args))
						end
					end
					task.wait(0.05) -- very fast (adjust lower if needed)
				end
			end)
		end
	end
})
