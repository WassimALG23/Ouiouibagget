local Library = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Library:CreateWindow({
	Title = "ðŸŒ± Auto Seed Buyer",
	SubTitle = "by Zoro",
	TabWidth = 160,
	Size = UDim2.fromOffset(500, 350),
	Acrylic = true,
	Theme = "Dark",
	MinimizeKey = Enum.KeyCode.RightControl
})

local MainTab = Window:AddTab({ Title = "Seeds", Icon = "ðŸŒ¾" })

-- Seed list
local seedOptions = {
	"Carrot", "Strawberry", "Blueberry", "Tomato", "Cauliflower",
	"Avocado", "Banana", "Green Apple", "Bell Pepper", "Kiwi",
	"Prickly Pear", "Loquat", "Feijoa", "Sugar Apple"
}

-- Track selected seeds
local selectedSeeds = {}

-- Helper functions
local function updateSelectedSeeds(seed)
	for i, s in ipairs(selectedSeeds) do
		if s == seed then
			table.remove(selectedSeeds, i)
			return
		end
	end
	table.insert(selectedSeeds, seed)
end

local function getSelectedList()
	if #selectedSeeds == 0 then
		return "None"
	else
		return table.concat(selectedSeeds, ", ")
	end
end

-- Label to show selection
local selectionLabel = MainTab:AddParagraph({
	Title = "Selected Seeds",
	Content = "None"
})

-- Dropdown to add/remove seeds
MainTab:AddDropdown({
	Title = "ðŸŽ¯ Select Seeds",
	Values = seedOptions,
	Multi = false,
	Default = "",
	Callback = function(selected)
		updateSelectedSeeds(selected)
		selectionLabel:Set(getSelectedList())
	end
})

-- Toggle for auto-buy
local isAutoBuying = false

MainTab:AddToggle({
	Title = "âš¡ Auto Buy Enabled",
	Default = false,
	Callback = function(state)
		isAutoBuying = state
		if isAutoBuying then
			task.spawn(function()
				while isAutoBuying do
					for _, seed in ipairs(selectedSeeds) do
						local args = { seed }
						game:GetService("ReplicatedStorage"):WaitForChild("GameEvents"):WaitForChild("BuySeedStock"):FireServer(unpack(args))
					end
					task.wait(0.05) -- very fast loop
				end
			end)
		end
	end
})
